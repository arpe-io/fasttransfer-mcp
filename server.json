{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.arpe-io/fasttransfer-mcp",
  "description": "MCP server for FastTransfer â€” high-performance parallel data transfer between databases",
  "repository": {
    "url": "https://github.com/arpe-io/fasttransfer-mcp",
    "source": "github"
  },
  "version": "0.1.5",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "fasttransfer-mcp",
      "version": "0.1.5",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Path to the FastTransfer binary",
          "isRequired": true,
          "format": "string",
          "isSecret": false,
          "name": "FASTTRANSFER_PATH"
        },
        {
          "description": "Execution timeout in seconds (default: 1800)",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "FASTTRANSFER_TIMEOUT"
        },
        {
          "description": "Directory for execution logs (default: ./logs)",
          "format": "string",
          "name": "FASTTRANSFER_LOG_DIR"
        },
        {
          "description": "Logging level: DEBUG, INFO, WARNING, ERROR (default: INFO)",
          "format": "string",
          "name": "LOG_LEVEL"
        }
      ]
    }
  ]
}
